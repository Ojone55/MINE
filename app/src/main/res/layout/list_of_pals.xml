<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <ImageView
      android:id="@+id/palsimage"
      android:layout_width="50dp"
      android:layout_height="50dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/ic_baseline_emoji_people_24"/>

    <TextView
        android:id="@+id/palsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Pals"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/teal_200"
        app:layout_constraintStart_toEndOf="@id/palsimage"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokoja"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/palsimage"
        app:layout_constraintTop_toBottomOf="@id/palsname"
        />
  <TextView
      android:id="@+id/phonenumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0803333333"
      app:layout_constraintStart_toEndOf="@id/palsimage"
      app:layout_constraintTop_toBottomOf="@id/address"
      />




</androidx.constraintlayout.widget.ConstraintLayout>